{
  "name": "compendium-triage",
  "version": "0.1.0",
  "description": "AI Orchestrator Architecture App",
  "author": "Compendium Triage Team",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run build:main && NODE_ENV=development concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "NODE_ENV=development electron dist/main/main.js",
    "dev:main:watch": "tsc -p tsconfig.main.json --watch",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron dist/main/main.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint renderer/src --ext .ts,.tsx",
    "lint:fix": "eslint renderer/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"renderer/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"renderer/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist/",
    "postinstall": "electron-builder install-app-deps",
    "setup-hooks": "./scripts/setup-hooks.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "firebase": "^10.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "electron": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "cross-env": "^7.0.0",
    "electron-builder": "^24.0.0"
  }
}
